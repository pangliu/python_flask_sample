    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: runserver.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/runserver.py",
        },
        {
            "name": "Python: Flask (0.11.x or later)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "host_app.serverapp.py"                
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"      // Remove to auto-reload modified pages
            ]
        },
    ]
}